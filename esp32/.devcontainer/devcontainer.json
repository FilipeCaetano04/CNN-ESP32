{
	"name": "ESP32 TFLite",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
				"idf.espIdfPath": "/opt/esp/idf",
				"idf.toolsPath": "/opt/esp",
				"idf.gitPath": "/usr/bin/git",
                
                // Desabilita verificação de portas automática para evitar conflito com USB
                "idf.adapterTargetName": "esp32"
			},
			"extensions": [
				"espressif.esp-idf-extension"
			]
		}
	},
	// --privileged permite acesso total ao hardware (USB)
	"runArgs": [
   "--privileged",
   "--device=/dev/ttyUSB0"
]

}